@{ Layout = "_Layout"; }

@using Factory.Models;

<h1>Welcome to Dr. Sillystringz's Factory</h1>

  <hr>
    <h4>Engineers</h4>
    @if (Model["engineers"].Length == 0)
    {
      <p>No engineers have been added yet</p>
    }
    <ul>
      @foreach (Engineer engineers in Model["engineers"])
      {
        <li>@Html.ActionLink(@engineers.EngineerName, "Details", "Engineers", new { id = @engineers.EngineerId})</li>
      }
    </ul>

    <h4>Machines</h4>
    @if (Model["machines"].Length == 0)
    {
      <p>No machines have been added yet</p>
    }
    <ul>
      @foreach (Machine machine in Model["machines"])
      {
        <li>@Html.ActionLink(@machine.MachineName, "Details", "Machines", new { id = @machine.MachineId})</li>
      }
    
    </ul>
    
    <hr>
    
    <p>@Html.ActionLink("Manage all Engineers", "Index", "Engineers")</p>
    <p>@Html.ActionLink("Manage all Machines", "Index", "Machines")</p>